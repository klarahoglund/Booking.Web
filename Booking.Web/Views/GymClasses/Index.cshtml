@model IEnumerable<Booking.Core.Entities.GymClass>

@{
    ViewData["Title"] = "Index";
}

<h1>Booking</h1>
<div id="createajax"></div>

<p>
    <a asp-action="Create" class="btn btn-success ms-2" >Create </a>

    <a asp-action="Create" class="btn btn-danger ms-2"
        data-ajax="true"
        data-ajax-method="GET"
        data-ajax-update="#createajax"
        data-ajax-mode="replace">Create With Ajax</a> 
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="gymClasses">
        <partial name= "GymClassesPartial"/>

    </tbody>
</table>
